<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bggg3"
    >

    <ImageView
        android:id="@+id/btn_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/user2"
        android:layout_margin="10dp"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo5"
            android:id="@+id/mylogo"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAKED FOOD"
            android:textSize="10dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-medium"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:id="@+id/buttons"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/foodlabel"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="Food name"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:background="#FF5B3F"/>
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_below="@+id/foodlabel"/>

        <ListView
            android:layout_below="@+id/picture"
            android:id="@+id/mobile_list"
            android:layout_width="match_parent"
            android:layout_height="120dp">
        </ListView>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#1eac32"
            android:text="Back"
            android:textSize="12dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginBottom="5dp"
            android:letterSpacing="0.2"
            android:layout_below="@+id/mobile_list"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>


</RelativeLayout>

